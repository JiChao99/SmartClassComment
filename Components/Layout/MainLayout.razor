@page "/"
@inherits LayoutComponentBase

<MudThemingProvider @rendermode="InteractiveServer" />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">Smart Class Comment</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Href="https://github.com/jichao99/SmartClassComment" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="3">
        <MudNavMenu Bordered="true">
            <MudNavLink Match="NavLinkMatch.All" Disabled Href="/" Icon="@Icons.Material.Filled.ContentPaste" IconColor="Color.Inherit">Smart Paste</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Disabled Href="/" Icon="@Icons.Material.Filled.EditNote" IconColor="Color.Inherit">Smart TextArea</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Disabled Href="/" Icon="@Icons.Material.Filled.Search" IconColor="Color.Inherit">Smart ComboBox</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="/classComment" Icon="@Icons.Material.Filled.AddComment" IconColor="Color.Inherit">课堂点评</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
            @Body
    </MudMainContent>
</MudLayout>
@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}